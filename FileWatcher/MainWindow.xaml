<Window x:Class="FileWatcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileWatcher"
        mc:Ignorable="d"
        Title="MainWindow" Height="481.875" Width="800">
    <StackPanel Margin="10">
        <WrapPanel HorizontalAlignment="Center" DockPanel.Dock="Top" Margin="0,0,0,10">
            <Button Content="Watch file" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="WatchFileClick"/>
        </WrapPanel>
        <ListView Name="ListView" Height="200"></ListView>
        <TextBox Name="LogEditor" Height="200" />
    </StackPanel>
</Window>
